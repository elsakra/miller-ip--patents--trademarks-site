<section id="contact" class="py-32 md:py-40 bg-gradient-to-br from-stone-50 to-white" data-module-key="cta" data-dominant-signal="headline">
  <div class="max-w-7xl mx-auto px-8">
    <div class="bg-slate-950 rounded-3xl p-12 md:p-16 text-center relative overflow-hidden noise-texture">
      <!-- Background decoration -->
      <div class="absolute inset-0 bg-gradient-to-br from-amber-500/20 via-transparent to-emerald-600/20"></div>
      
      <div class="relative z-10">
        <h2 class="text-6xl md:text-7xl font-bold tracking-tighter leading-none text-stone-50 mb-6 animate-on-scroll" data-section-header-recipe="primary">
          Ready to protect your <span class="gradient-text">innovation</span>?
        </h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto mb-12 animate-on-scroll">
          Schedule a confidential consultation with our IP experts and discover how we can help secure your competitive advantage.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-on-scroll">
          <a href="/consultation" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-gradient-to-r from-amber-500 to-emerald-600 text-white rounded-full shadow-lg shadow-amber-500/25 hover:shadow-xl hover:shadow-amber-500/40 hover:scale-105 transition-all duration-300" data-button-recipe="primary">
            Schedule IP Consultation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <div class="text-slate-400">
            or call <a href="tel:+1234567890" class="text-amber-400 hover:text-amber-300 transition-colors font-semibold">+1 (234) 567-890</a>
          </div>
        </div>
        
        <div class="mt-12 pt-12 border-t border-slate-800">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-left">
            <div class="animate-on-scroll">
              <h3 class="text-lg font-semibold text-stone-50 mb-2">Free Initial Consultation</h3>
              <p class="text-slate-400">Discuss your IP needs with no obligation</p>
            </div>
            <div class="animate-on-scroll">
              <h3 class="text-lg font-semibold text-stone-50 mb-2">Strategic IP Roadmap</h3>
              <p class="text-slate-400">Get a customized protection strategy</p>
            </div>
            <div class="animate-on-scroll">
              <h3 class="text-lg font-semibold text-stone-50 mb-2">Transparent Pricing</h3>
              <p class="text-slate-400">Clear, upfront fee structures</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>