<section id="home" class="relative min-h-screen bg-slate-950 overflow-hidden noise-texture" data-hero-pattern="full-bleed-photo" data-module-key="hero" data-dominant-signal="image">
  <!-- Gradient orbs for visual interest -->
  <div class="absolute top-0 left-1/5 w-[600px] h-[600px] bg-amber-500/30 rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 right-1/5 w-[500px] h-[500px] bg-emerald-600/20 rounded-full blur-[100px]"></div>
  
  <!-- Hero background image with warm grading overlay -->
  <div class="absolute inset-0 z-0">
    <img src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop" alt="Innovation background" class="w-full h-full object-cover opacity-20" />
    <div class="absolute inset-0 bg-amber-500/10"></div>
  </div>
  
  <!-- Fixed Navigation with blur backdrop -->
  <nav class="fixed top-0 left-0 right-0 z-30 backdrop-blur-md bg-slate-950/80 border-b border-white/10">
    <div class="px-8 py-6">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a href="/" class="text-2xl font-display font-bold text-stone-50">Miller IP</a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#services" class="text-stone-50/80 hover:text-amber-400 hover:shadow-[0_0_20px_rgba(245,158,11,0.5)] transition-all duration-200">Services</a>
          <a href="#expertise" class="text-stone-50/80 hover:text-amber-400 hover:shadow-[0_0_20px_rgba(245,158,11,0.5)] transition-all duration-200">Expertise</a>
          <a href="#process" class="text-stone-50/80 hover:text-amber-400 hover:shadow-[0_0_20px_rgba(245,158,11,0.5)] transition-all duration-200">Process</a>
          <a href="#testimonials" class="text-stone-50/80 hover:text-amber-400 hover:shadow-[0_0_20px_rgba(245,158,11,0.5)] transition-all duration-200">Testimonials</a>
          <a href="#contact" class="px-6 py-2.5 bg-amber-500 text-white font-semibold rounded-full hover:scale-105 hover:bg-amber-400 hover:shadow-[0_0_30px_rgba(245,158,11,0.6)] transition-all duration-200 shadow-lg" data-button-recipe="primary">Get Started</a>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Hero content -->
  <div class="relative z-10 max-w-7xl mx-auto px-8 pt-40 pb-32 md:pt-48 md:pb-40">
    <div class="grid md:grid-cols-5 gap-12 items-center">
      <div class="md:col-span-3">
        <h1 class="text-8xl font-bold tracking-tighter leading-none text-stone-50 mb-6 animate-on-scroll">
          Protect your <span class="gradient-text">innovation</span>
        </h1>
        <p class="text-xl leading-relaxed text-slate-400 max-w-2xl mb-8 animate-on-scroll">
          Expert patent and trademark services that safeguard your intellectual property and fuel your business growth.
        </p>
        <div class="flex flex-wrap gap-4 animate-on-scroll">
          <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 text-xl font-semibold bg-gradient-to-r from-amber-500 to-emerald-600 text-white rounded-full shadow-lg shadow-amber-500/25 hover:shadow-xl hover:shadow-amber-500/40 hover:scale-105 transition-all duration-300" data-button-recipe="primary">
            Schedule IP Consultation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 text-xl font-semibold bg-white/10 backdrop-blur-sm text-white rounded-full border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300" data-button-recipe="secondary">
            Learn More
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Professional photo with hover effect -->
      <div class="md:col-span-2 animate-on-scroll">
        <div class="relative group">
          <div class="absolute -inset-4 bg-gradient-to-r from-amber-500 to-emerald-600 rounded-2xl blur-2xl opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
          <img src="https://images.unsplash.com/photo-1556075798-4825dfaaf498?q=80&w=2076&auto=format&fit=crop" alt="Legal professional" class="relative rounded-2xl shadow-2xl w-full h-auto transform transition-transform duration-300 group-hover:scale-105" />
        </div>
      </div>
    </div>
  </div>
</section>