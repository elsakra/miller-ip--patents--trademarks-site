---
// Hero Component - The most important section
---

<section id="home" class="relative min-h-screen bg-stone-50 overflow-hidden noise-texture">
  <!-- Warm gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-amber-50/50 via-stone-50 to-rose-50/30"></div>
  
  <!-- Navigation -->
  <nav class="relative z-20 px-6 lg:px-8 py-6">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-2xl font-black tracking-tight text-stone-900">
        MILLER IP
      </a>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Services</a>
        <a href="#expertise" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Expertise</a>
        <a href="#about" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">About</a>
        <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 bg-stone-900 text-white rounded-full font-semibold hover:bg-stone-800 hover:scale-105 transition-all duration-300">
          Schedule Consultation
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden text-stone-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 py-24 md:py-32 lg:py-40">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Text Content -->
      <div class="space-y-8">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter leading-none text-stone-900">
          PROTECTING
          <span class="gradient-text">YOUR</span>
          INNOVATIONS
        </h1>
        
        <p class="text-xl md:text-2xl text-stone-700 leading-relaxed max-w-lg">
          Expert patent and trademark services that safeguard your intellectual property and fuel your business growth.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-gradient-to-r from-amber-600 to-amber-700 text-white rounded-full shadow-lg shadow-amber-600/25 hover:shadow-xl hover:shadow-amber-600/30 hover:scale-105 transition-all duration-300">
            Schedule Consultation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold backdrop-blur-xl bg-white/80 border border-stone-200 rounded-full hover:bg-white hover:shadow-lg transition-all duration-300">
            Explore Services
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="relative animate-on-scroll">
        <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl">
          <img 
            src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800&h=600&fit=crop" 
            alt="Professional intellectual property attorney"
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-stone-900/20 to-transparent"></div>
        </div>
        <!-- Floating accent elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-amber-400/20 rounded-full blur-2xl"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-rose-400/20 rounded-full blur-2xl"></div>
      </div>
    </div>
    
    <!-- Trust Indicators -->
    <div class="mt-20 pt-12 border-t border-stone-200">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="animate-on-scroll" data-stagger="0">
          <div class="text-3xl font-black text-amber-600">500+</div>
          <div class="text-stone-600 mt-1">Patents Filed</div>
        </div>
        <div class="animate-on-scroll" data-stagger="1">
          <div class="text-3xl font-black text-amber-600">98%</div>
          <div class="text-stone-600 mt-1">Success Rate</div>
        </div>
        <div class="animate-on-scroll" data-stagger="2">
          <div class="text-3xl font-black text-amber-600">15+</div>
          <div class="text-stone-600 mt-1">Years Experience</div>
        </div>
        <div class="animate-on-scroll" data-stagger="3">
          <div class="text-3xl font-black text-amber-600">200+</div>
          <div class="text-stone-600 mt-1">Happy Clients</div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import '../scripts/animations.ts';
</script>