---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden noise-texture">
  <!-- Warm gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-stone-50 via-amber-50/30 to-rose-50/20"></div>
  
  <!-- Floating gradient orbs for depth -->
  <div class="absolute top-20 left-10 w-96 h-96 bg-amber-300/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-80 h-80 bg-rose-300/15 rounded-full blur-3xl"></div>
  
  <!-- Navigation -->
  <nav class="absolute top-0 left-0 right-0 z-50 px-6 py-6">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-stone-900">
        Miller IP
      </a>
      <div class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-stone-700 hover:text-stone-900 transition-colors duration-200">Services</a>
        <a href="#about" class="text-stone-700 hover:text-stone-900 transition-colors duration-200">About</a>
        <a href="#process" class="text-stone-700 hover:text-stone-900 transition-colors duration-200">Process</a>
        <a href="#contact" class="text-stone-700 hover:text-stone-900 transition-colors duration-200">Contact</a>
      </div>
    </div>
  </nav>
  
  <!-- Hero content -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
    <h1 class="text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter text-stone-900 mb-6 animate-fade-in">
      Protect Your
      <span class="gradient-text"> Innovation</span>
    </h1>
    <p class="text-xl md:text-2xl text-stone-700 max-w-3xl mx-auto mb-12 leading-relaxed animate-slide-up" style="animation-delay: 0.2s">
      Expert patent and trademark services from attorneys who understand your vision
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up" style="animation-delay: 0.4s">
      <a href="https://strategymeeting.com" class="group inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold bg-gradient-to-r from-amber-600 to-rose-600 text-white rounded-full shadow-lg shadow-amber-500/25 hover:shadow-xl hover:shadow-amber-500/30 hover:scale-105 transition-all duration-300">
        Schedule Strategy Meeting
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
      <a href="#services" class="inline-flex items-center px-8 py-4 bg-white/80 backdrop-blur-sm border border-stone-200 rounded-full text-stone-800 font-semibold hover:bg-white hover:border-stone-300 hover:scale-105 transition-all duration-300">
        Learn More
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>