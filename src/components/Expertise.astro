<section id="expertise" class="py-32 md:py-40 bg-slate-900 text-white noise-texture" data-module-key="expertise" data-dominant-signal="stat">
  <div class="max-w-7xl mx-auto px-8">
    <div class="grid md:grid-cols-5 gap-16 items-center">
      <div class="md:col-span-2">
        <h2 class="text-6xl font-bold tracking-tight text-stone-50 mb-6 animate-on-scroll" data-section-header-recipe="primary">Industry Expertise</h2>
        <p class="text-xl text-slate-400 mb-8 animate-on-scroll">
          Deep technical knowledge across diverse industries ensures your IP strategy aligns with your business goals.
        </p>
        <div class="space-y-6 animate-on-scroll">
          <div class="flex items-center gap-4">
            <div class="text-5xl font-bold text-amber-500 tracking-tight leading-none" data-stat-recipe="primary">25+</div>
            <div class="text-slate-400">Industries Served</div>
          </div>
          <div class="flex items-center gap-4">
            <div class="text-5xl font-bold text-amber-500 tracking-tight leading-none" data-stat-recipe="primary">$2B+</div>
            <div class="text-slate-400">IP Portfolio Value Protected</div>
          </div>
          <div class="flex items-center gap-4">
            <div class="text-5xl font-bold text-amber-500 tracking-tight leading-none" data-stat-recipe="primary">98%</div>
            <div class="text-slate-400">Client Success Rate</div>
          </div>
        </div>
      </div>
      
      <div class="md:col-span-3">
        <div class="grid grid-cols-2 gap-6">
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll">
            <h3 class="text-xl font-semibold mb-2">Technology & Software</h3>
            <p class="text-slate-400 text-sm">AI/ML, blockchain, SaaS platforms, mobile applications</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll">
            <h3 class="text-xl font-semibold mb-2">Life Sciences</h3>
            <p class="text-slate-400 text-sm">Biotechnology, pharmaceuticals, medical devices</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll">
            <h3 class="text-xl font-semibold mb-2">Clean Energy</h3>
            <p class="text-slate-400 text-sm">Solar, wind, battery technology, sustainable materials</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll">
            <h3 class="text-xl font-semibold mb-2">Consumer Products</h3>
            <p class="text-slate-400 text-sm">Electronics, fashion, food & beverage brands</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll">
            <h3 class="text-xl font-semibold mb-2">Manufacturing</h3>
            <p class="text-slate-400 text-sm">Industrial processes, materials science, automation</p>
          </div>
          <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll">
            <h3 class="text-xl font-semibold mb-2">Financial Services</h3>
            <p class="text-slate-400 text-sm">Fintech, payment systems, trading algorithms</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Expertise visual -->
    <div class="mt-16 relative rounded-2xl overflow-hidden animate-on-scroll">
      <img src="https://images.unsplash.com/photo-1559136555-9303baea8ebd?q=80&w=2070&auto=format&fit=crop" alt="Industry expertise visualization" class="w-full h-64 object-cover opacity-50" />
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/80 to-transparent"></div>
    </div>
  </div>
</section>