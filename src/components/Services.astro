<section id="services" class="py-32 md:py-40 bg-stone-50" data-module-key="services" data-dominant-signal="diagram">
  <div class="max-w-7xl mx-auto px-8">
    <div class="text-center mb-16">
      <h2 class="text-6xl font-bold tracking-tight text-slate-950 mb-6 animate-on-scroll" data-section-header-recipe="primary">IP Protection Services</h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto animate-on-scroll">
        Comprehensive intellectual property solutions tailored to protect your innovations and brand identity.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Patents Service -->
      <div class="bg-white rounded-2xl shadow-xl hover:-translate-y-2 hover:shadow-2xl transition-all duration-300 p-8 animate-on-scroll" data-card-recipe="primary">
        <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-emerald-600 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-slate-950 mb-4">Patent Services</h3>
        <p class="text-slate-600 mb-6">
          Protect your inventions with comprehensive patent filing and prosecution services.
        </p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-slate-600">Patent searches and landscape analysis</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-slate-600">Provisional and non-provisional applications</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-slate-600">International PCT filings</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-slate-600">Office action responses</span>
          </li>
        </ul>
        <a href="#contact" class="inline-flex items-center gap-2 text-amber-600 font-semibold hover:text-amber-700 transition-colors">
          Learn more
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
